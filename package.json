{
  "name": "copy-contents-to-clipboard",
  "displayName": "Copy Contents to Clipboard",
  "description": "Copy file and folder contents to clipboard while preserving structure",
  "version": "1.0.0",
  "publisher": "yourPublisherName",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-contents-to-clipboard.copyContents",
        "title": "Copy Contents to Clipboard"
      },
      {
        "command": "copy-contents-to-clipboard.copyFolderContents",
        "title": "Copy Folder Contents and Structure to Clipboard"
      },
      {
        "command": "copy-contents-to-clipboard.copyFileContents",
        "title": "Copy File to Clipboard"
      },
      {
        "command": "copy-contents-to-clipboard.copyDirectoryStructure",
        "title": "Copy Directory Structure Only to Clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-contents-to-clipboard.copyFolderContents",
          "when": "explorerResourceIsFolder",
          "group": "1_modification"
        },
        {
          "command": "copy-contents-to-clipboard.copyDirectoryStructure",
          "when": "explorerResourceIsFolder",
          "group": "1_modification"
        },
        {
          "command": "copy-contents-to-clipboard.copyFileContents",
          "when": "!explorerResourceIsFolder",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.4",
    "@types/node": "16.x",
    "eslint": "^8.9.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "glob": "^7.2.0",
    "typescript": "^4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cytokineking/vs-copy-clipboard-extension.git"
  }
}